
@{
    Layout = null;
}

@{

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <!--=============== REMIXICONS ===============-->
        <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">

        <link href="@Url.Content("~/css/Login.css")" rel="stylesheet" />
        <title>Admin login </title>
        <link rel="icon" type="image/x-icon" href="https://smhttp-ssl-73217.nexcesscdn.net/pub/media/favicon/default/icon-01.png">
    </head>
    <body>
        <div class="login">

            <img src="@Url.Content("~/img/111.png")" alt="login image" class="login__img">

            <form action="@Url.Action("Login", "Admin")" method="post" class="login__form ">
                <h1 class="login__title">Login</h1>

                <div class="login__content">
                    <div class="login__box">
                        <i class="ri-user-3-line login__icon"></i>

                        <div class="login__box-input">
                            <input type="email" required name="UserName" class="login__input" id="login-email" placeholder=" ">
                            <label for="login-email"  class="login__label">Email or Phone</label>
                        </div>
                    </div>

                    <div class="login__box">
                        <i class="ri-lock-2-line login__icon"></i>

                        <div class="login__box-input">
                            <input type="password" required name="Password" class="login__input" id="login-pass" placeholder=" ">
                            <label for="login-pass" class="login__label">Password</label>
                            <i class="ri-eye-off-line login__eye" id="login-eye"></i>
                        </div>
                    </div>
                </div>

                <div class="login__check">
                    <div class="login__check-group">
                        <input type="checkbox" class="login__check-input" id="login-check">
                        <label for="login-check" class="login__check-label">Remember me</label>
                    </div>

                    <a href="@Url.Action("ResetPassword", "Admin")" class="login__forgot">Forgot Password?</a>
                </div>

                <button type="submit" class="login__button">Login</button>

                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger" style="color:#680082" role="alert">
                        @ViewBag.ErrorMessage
                    </div>


                }
            </form>

        </div>

     
       
    </body>
    </html>
}
