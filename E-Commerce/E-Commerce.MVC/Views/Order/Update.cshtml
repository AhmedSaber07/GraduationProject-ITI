@{
    <form asp-controller="Order" asp-action="Update" method="post">
      
            <input type="hidden" name="OrderNumber" value="@ViewBag.OrderNumber">
            <div class="form-group">
                <label for="selectedState">Select State:</label>
                <select class="form-control" id="selectedState" name="SelectedState">
                    <option value="">-- Select State --</option>
                @foreach (var stateItem in @ViewBag.StateList)
                    {
                        <option value="@stateItem.Value">@stateItem.Text</option>
                    }
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>

    @if (ViewBag.response != null)
    {
        <div class="alert alert-success" role="alert">
            @ViewBag.response
        </div>



    }
}
